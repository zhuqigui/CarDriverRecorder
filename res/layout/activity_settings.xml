<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/settings_bg"
    tools:context="com.softwinner.bionrecorder.ui.activity.SettingsActivity">

    <!-- 左侧导航栏-->
    <com.softwinner.bionrecorder.widget.BionIndicator
        android:id="@+id/settingsIndicator"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:alpha="0.5"
        app:item_count="3"
        app:text_color_normal="@android:color/darker_gray"
        app:text_color_selected="@color/white"
        app:indicator_style="triangle"
        app:indicator_color="@color/settings_bg">
    </com.softwinner.bionrecorder.widget.BionIndicator>

    <com.softwinner.bionrecorder.widget.VerticalViewPager
        android:id="@+id/settingsViewPager"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    </com.softwinner.bionrecorder.widget.VerticalViewPager>

</LinearLayout>
