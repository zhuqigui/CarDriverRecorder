<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BionIndicator">
        <attr name="item_count" format="integer"/>
        <attr name="text_color_normal" format="color"/>
        <attr name="text_color_selected" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="indicator_color" format="color"/>
        <attr name="indicator_style">
            <enum name="line" value="1" />
            <enum name="square" value="2" />
            <enum name="triangle" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BionRecyclerView">
        <attr name="empty_view" format="reference"/>
        <attr name="loading_view" format="reference"/>
    </declare-styleable>


</resources>